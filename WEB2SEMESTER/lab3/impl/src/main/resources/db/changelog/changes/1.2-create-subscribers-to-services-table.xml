<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                            http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet id="3" author="admin">
        <createTable tableName="subscriber_services">
            <column name="subscriber_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="service_id" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="subscriber_id, service_id" tableName="subscriber_services"/>

        <addForeignKeyConstraint
                baseTableName="subscriber_services"
                baseColumnNames="subscriber_id"
                constraintName="fk_subscriber_services_subscriber"
                referencedTableName="subscribers"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="subscriber_services"
                baseColumnNames="service_id"
                constraintName="fk_subscriber_services_service"
                referencedTableName="services"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>
